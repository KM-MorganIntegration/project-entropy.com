!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Project Entropy'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Entropy'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = google_webfonts_init({google: ['Roboto', 'Raleway:400,700']})

    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}/
    %link{:href => "/favicon-16x16.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}/
    %link{:href => "/manifest.json", :rel => "manifest"}/
    %link{:color => "#5bbad5", :href => "/safari-pinned-tab.svg", :rel => "mask-icon"}/
    %meta{:content => "#ffffff", :name => "theme-color"}/

    :plain
      <script async defer src="https://buttons.github.io/buttons.js"></script>

    = csrf_meta_tags

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-77794730-1', 'auto');
      ga('send', 'pageview');

  /   %main{:role => "main"}
  /     = render 'layouts/messages'
  /

  %body#page-top
    = render 'layouts/navigation'
    = yield
