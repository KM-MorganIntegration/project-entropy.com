.visualization{
  width: 100%;
  height: 33%;
  position:absolute;
  bottom:0;

  -webkit-mask-image: -webkit-gradient(linear, left 75%, left top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)));


  .hexagon {
   fill: transparent;
   pointer-events: all;
  }

  .hexagon path {
   -webkit-transition: fill 250ms linear;
   transition: fill 250ms linear;
  }

  .hexagon :hover {
   fill: pink;
  }

  .hexagon .fill {
   fill: #fff;
  }

  .mesh {
   fill: none;
   stroke: #000;
   stroke-opacity: .2;
   pointer-events: none;
  }

  .border {
   fill: none;
   stroke: #fff;
   stroke-width: 2px;
   pointer-events: none;
  }
}

